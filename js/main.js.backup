        // Áµ±Ë®àÊÉÖÂ†±„ÇíÊõ¥Êñ∞
        this.updateStatusDisplay({
            serverCount: allStats.totalServers,
            userCount: allStats.totalUsers,
            uptime: allStats.averageUptime,
            status: 'online'
        });

        // Ë©≥Á¥∞„Çπ„ÉÜ„Éº„Çø„Çπ„ÇíÊõ¥Êñ∞
        this.updateDetailedBotStatus(botStatuses, allStats);

