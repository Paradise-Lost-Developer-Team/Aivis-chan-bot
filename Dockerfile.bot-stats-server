
# Node-only image for bot-stats-server (Astro/nginx removed)
FROM node:current-alpine3.22

WORKDIR /app

# API-only image: copy package files and install production deps
COPY package*.json ./
RUN npm install --production --no-audit --no-fund

# Copy only the API server entry
COPY bot-stats-server.js ./bot-stats-server.js

ENV PORT=3001
EXPOSE 3001
CMD ["node", "bot-stats-server.js"]
